@model Chat.ViewModel.LoginViewModel

@{
    Layout = "_Layout";
}

@section Style {
    <link rel="stylesheet" href="~/css/login.css" />
}

<div class="login-form">
    <h2>Вход на сайт</h2>
    <form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input class="form-control" type="text" asp-for="UserName" />
                <span class="form-text text-muted" asp-validation-for="UserName" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" />
                <span class="form-text text-muted" asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input class="form-control" type="submit" value="Войти" class="btn btn-outline-dark" />
                <a asp-action="Register" asp-controller="Account">Регистрация</a>
            </div>
        </div>
    </form>
</div>


